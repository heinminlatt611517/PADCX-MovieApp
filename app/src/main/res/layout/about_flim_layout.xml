<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvAboutFilm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_txtFilm"
        android:textAllCaps="true"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvOriginalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Original Title:"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@+id/tvAboutFilm"
        app:layout_constraintStart_toStartOf="@+id/tvAboutFilm"
        />

    <TextView
        android:id="@+id/tvOriginalTitleName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Fantastic Beasts and Where to Find Them"
        android:singleLine="false"
        android:maxLines="2"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvOriginalTitle"
        app:layout_constraintTop_toTopOf="@+id/tvOriginalTitle"
        android:layout_marginLeft="@dimen/margin_large"
        />

    <TextView
        android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@+id/tvOriginalTitleName"
        app:layout_constraintStart_toStartOf="@+id/tvOriginalTitle"
        />

    <TextView
        android:id="@+id/tvTypeDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Family,Fantasy,Adventure"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/tvType"
        app:layout_constraintTop_toBottomOf="@+id/tvOriginalTitleName"
        app:layout_constraintStart_toStartOf="@+id/tvOriginalTitleName"
        />

    <TextView
        android:id="@+id/tvProduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Production:"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@+id/tvTypeDec"
        app:layout_constraintStart_toStartOf="@+id/tvOriginalTitle"
        />

    <TextView
        android:id="@+id/tvProductionDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="United Kindgom, UAD"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/tvProduction"
        app:layout_constraintTop_toBottomOf="@+id/tvTypeDec"
        app:layout_constraintStart_toStartOf="@+id/tvOriginalTitleName"
        />

    <TextView
        android:id="@+id/tvPremiere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Premiere:"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@+id/tvProductionDec"
        app:layout_constraintStart_toStartOf="@+id/tvOriginalTitle"
        />

    <TextView
        android:id="@+id/tvPremiereDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="United Kindgom, UAD"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="@+id/tvOriginalTitleName"
        app:layout_constraintTop_toTopOf="@+id/tvPremiere"/>

    <TextView
        android:id="@+id/tvMovieDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintTop_toBottomOf="@+id/tvPremiereDec"
        app:layout_constraintStart_toStartOf="@+id/tvOriginalTitle"
        />

    <TextView
        android:id="@+id/tvMovieDescriptionText"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Fantastic Beasts and Where to Find Them,Fantastic Beasts and Where to Find Them,Fantastic Beasts and Where to Find Them,Fantastic Beasts and Where to Find Them,Fantastic Beasts and Where to Find Them,Fantastic Beasts and Where to Find Them"
        app:layout_constraintStart_toStartOf="@+id/tvOriginalTitleName"
        app:layout_constraintTop_toTopOf="@+id/tvMovieDescription"/>

</androidx.constraintlayout.widget.ConstraintLayout>